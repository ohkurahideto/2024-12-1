
<h1><p><%= @tweet.plan %></p></h1>
<div class="tweet">
  
  <p><%= @tweet.created_at %></p>
      <% if user_signed_in? %>
      <% if current_user.already_liked?(@tweet) %>
        <%= button_to tweet_like_path(@tweet), method: :delete do %>
          <p>参加しない</p><%= @tweet.likes.count %>
        <% end %>
      <% else %>
        <%= button_to tweet_likes_path(@tweet), method: :post do %>
          <p>参加する</p><%= @tweet.likes.count %>
        <% end %>
      <% end %>
    <% else %>
      <p>参加者一覧 = </p><%= @tweet.likes.count %>
    <% end %>
  <%= link_to "旅行名を変える", edit_tweet_path(@tweet.id) %>
</div>




<div class="comment-wrapper">
  <h2>目的地リスト</h2>
  
  
  <% @comments.each do |c| %>
    <div>
      <%# <%= c.user.email unless c.user.blank? %> 
      <br>
      <%= link_to c.content , :controller => "tweets", :action => "edit2" %>
      
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@tweet, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<h2>参加者一覧</h2>
<% @tweet.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<%= link_to "旅行名一覧に戻る", tweets_path %>